<% include partials/head %>
<body class="signup-page">
    <h1 class="app-title">Apollo</h1>
    <h5 class="app-description">Personal Fitness Logger</h5>
    <form class="signup-form" method="post" action="/signup">
    <div class="login-inputs">
        <input type="text" placeholder="Enter email" name="email">
        <input type="password" placeholder="Enter a password" name="password">
        <input type="text" placeholder="Enter a username" name="displayname" class="username-signup">
        </div>
        <button class="mdl-button mdl-js-button mdl-button--raised app-button startbutton" id="signupbutton">Sign Up</button>
    </form>
    <p>Have an account click <a href="/users/login">here</a></p>
</body>
